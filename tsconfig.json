{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@root/*": ["*"],
      "@src/*": ["src/*"],
      "@models/*": ["src/models/*"],
      "@config/*": ["config/*"],
      "@ws/*": ["src/websocket/*"],
      "@events/*": ["src/websocket/events/*"],
      "@types/*": ["src/types/*"],
      "@logic/*": ["src/websocket/logic/*"],
      "@tasks/*": ["src/tasks/*"],
      "@http/*": ["src/http/*"],
    }
  },
  "include": ["src", "src/**/*.ts", "src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
