{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@root/*": ["*"],
      "@src/*": ["src/*"],
      "@models/*": ["src/models/*"],
      "@config/*": ["config/*"],
      "@api/*": ["src/api/*"],
      "@ws/*": ["src/ws/*"]  
    }
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules"]
}
